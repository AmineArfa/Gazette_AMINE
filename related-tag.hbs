{{#if access}}
  {{#get "posts" filter="tag:{{primary_tag.slug}}+id:-{{id}}+tag:-[hash-podcast,hash-event,hash-newsletter,hash-sponsored]" include="tags,authors,tiers" limit="4"}}
    {{#if posts}}
      <section class="px-5 sm:px-6 mt-16">
        <div class="max-w-site mx-auto">
          {{!-- {{t "More in"}} {{t "See all"}} --}}
          {{> section-heading 
            section_title=(concat (t 'More in') " " ../primary_tag.name)
            section_link=../primary_tag.url
            section_link_text=(t 'See all')
          }}
          <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
            {{#foreach posts}}
              {{> cards/post-card-vertical
                excerpt_class="hidden"
              }}
            {{/foreach}}
          </div>
        </div>
      </section>
    {{/if}}
  {{/get}}
{{/if}}
{{#primary_tag}}
  <section class="related-tag">
    {{> section-heading title="More in {{name}}"}}
    
    {{#get "posts" limit="3" filter="tags:{{slug}}+id:-{{../id}}"}}
      {{#if posts}}
        <div class="related-posts">
          {{#foreach posts}}
            <article class="related-post">
              <h4><a href="{{url}}">{{title}}</a></h4>
              <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
            </article>
          {{/foreach}}
        </div>
        
        <a href="{{url}}" class="view-tag">
          View all posts in {{name}}
          {{> icon name="chevron-right" icon_class="size-4"}}
        </a>
      {{/if}}
    {{/get}}
  </section>
{{/primary_tag}}
