
<article class="{{post_class}} {{card_class}} relative flex gap-4 text-typ" data-post-card{{#if featured}} data-featured{{/if}}>
  {{!-- Feature Image --}}
  {{#if feature_image}}
    <a href="{{url}}" class="relative group {{media_class}}">
      <figure class="block rounded-theme overflow-hidden" role="none">
        {{> image
          image_type="post"
          image_class="w-full aspect-[4/3] object-cover rounded-[inherit] group-hover:opacity-90 transition-opacity"
          image_url=feature_image
          size_s=true
          size_m=true
          size_l=true
          sizes="(max-width: 767px) 90vw, (max-width: 1200px) 33vw, 400px"
          loading=image_loading
        }}
      </figure>
      {{> post-card-type-icon wrapper_class="scale-110 md:scale-125"}}
    </a>
  {{else if fallback_image}}
    <a href="{{url}}" class="relative group {{media_class}}">
      <figure class="block rounded-theme overflow-hidden" role="none">
        {{> image
          image_type="post"
          image_class="w-full aspect-[4/3] object-cover rounded-[inherit] group-hover:opacity-90 transition-opacity"
          image_url=fallback_image
          size_s=true
          size_m=true
          size_l=true
          sizes="(max-width: 767px) 90vw, (max-width: 1200px) 33vw, 400px"
          loading=image_loading
        }}
      </figure>
      {{> post-card-type-icon wrapper_class="scale-110 md:scale-125"}}
    </a>
  {{/if}}

  <div class="flex flex-col gap-2.5 {{content_class}}" data-post-card-content>

    {{!-- Post meta: tag / visibility / comment count --}}
    {{> post-card-meta-top }}

    {{!-- Title --}}
    {{#if use_h2}}
      <h2 class="text-base font-semibold md:text-lg leading-tight md:leading-[1.15] {{title_class}}" data-post-card-title>
        <a href="{{url}}" class="hover:underline underline-offset-4">
          <span>{{title}}</span>
        </a>
      </h2>
    {{else}}
      <h3 class="text-base font-semibold md:text-lg leading-tight md:leading-[1.15] {{title_class}}" data-post-card-title>
        <a href="{{url}}" class="hover:underline underline-offset-4">
          <span>{{title}}</span>
        </a>
      </h3>
    {{/if}}

    {{!-- Post meta: authors and date --}}
    {{> post-card-meta-bottom }}
    
  </div>
</article>
