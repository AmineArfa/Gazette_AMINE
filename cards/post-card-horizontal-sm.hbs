<article class="{{post_class}} {{card_class}} relative flex gap-4 md:gap-8 text-typ" data-post-card{{#if featured}} data-featured{{/if}}>
  <div class="bg-bgr flex flex-col gap-1.5 sm:gap-2 flex-3 md:flex-2 overflow-hidden" data-post-card-content>

    {{!-- Post meta: tag / visibility / comment count --}}
    {{> post-card-meta-top
      element_class="mb-0.5 md:mb-1 data-post-card-meta:hidden"
    }}

    {{!-- Title --}}
    <h3 class="text-base sm:text-lg font-semibold leading-[1.15]" data-post-card-title>
      <a href="{{url}}" class="hover:underline decoration-2 underline-offset-4">
        <span>{{title}}</span>
      </a>
    </h3>

    {{!-- Excerpt --}}
    {{#if excerpt}}
      <p class="text-base leading-snug mb-0.5 hidden" data-post-card-excerpt>
        {{excerpt words="30"}}
      </p>
    {{/if}}

    {{!-- Post meta: authors and date --}}
    {{> post-card-meta-bottom }}
  </div>  
  
  {{!-- Feature Image --}}
  {{#if feature_image}}
    <a href="{{url}}" class="{{media_class}} relative group self-start flex-1 sm:size-auto max-w-20 bg-bgr-tone aspect-[1/1]">
      <figure class="block rounded-theme overflow-hidden" role="none">
        {{> image
          image_type="post"
          image_class="aspect-[1/1] object-cover rounded-[inherit] w-full group-hover:opacity-90 transition-opacity"
          image_url=feature_image
          size_s=true
          size_m=true
          size_l=true
          sizes="(max-width: 767px) 25vw, 600px"
          loading=image_loading
        }}  
      </figure>
      {{> post-card-type-icon}}
    </a>
  {{/if}}
</article>
<article class="post-card flex gap-4 p-4 border rounded-lg">
  {{#if feature_image}}
    <div class="flex-shrink-0">
      <img src="{{img_url feature_image size="s"}}" alt="{{title}}" class="w-20 h-20 object-cover rounded">
    </div>
  {{/if}}
  
  <div class="flex-1">
    <h3 class="font-semibold text-lg mb-2">
      <a href="{{url}}" class="hover:text-blue-600">{{title}}</a>
    </h3>
    
    {{> post-card-meta-top}}
    
    {{#if excerpt}}
      <p class="text-gray-600 text-sm">{{excerpt words="15"}}</p>
    {{/if}}
  </div>
</article>
