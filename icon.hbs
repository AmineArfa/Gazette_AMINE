{{!-- Icon partial to include icons easily --}}
<i class="icon icon-{{name}}{{#if icon_class}} {{icon_class}}{{else}} size-5{{/if}}" role="presentation">
  {{#> (concat 'icons/' name)}}{{/undefined}}
</i>
